<%- include("navbar") %>

<div class="container-fluid bg-white p-4">

    <h1 class="mb-4">Shopping Cart</h1>

    <div class="row">

        <!-- LEFT SIDE CART TABLE -->
        <div class="col-md-12">
            <div class="table-responsive">
                <table>
                    <tr>
                        <th>Image</th>
                        <th>Product Name</th>
                        <th>Size</th>
                        <th>Qty</th>
                        <th>Price</th>
                        <th>Total</th>
                        <th>Action</th>
                    </tr>

                    <% var sum = 0 %>

                    <% cart.map(function(val,i){ %>

                    <tr>
                        <td><img src="/upload/<%=val.product_image1%>" class="product-img"></td>
                        <td><%= val.product_name %></td>
                        <td><%= val.product_size %></td>

                        <td>
                            <button class="qty-btn" onclick="decrease('<%=val.cart_id%>')">−</button>

                            <input type="number" 
                                   value="<%=val.qty%>" 
                                   min="1" 
                                   class="qty-box" 
                                   readonly>

                            <button class="qty-btn" onclick="increase('<%=val.cart_id%>')">+</button>
                        </td>

                        <td>₹<%= val.product_price %></td>
                        <td>₹<%= val.product_price * val.qty %></td>

                        <td>
                            <a class="remove-btn" href="/cart_remove/<%=val.cart_id%>">Remove</a>
                        </td>
                    </tr>

                    <% sum += val.product_price * val.qty %>

                    <% }) %>

                </table>
            </div>
        </div>

        <!-- GRAND TOTAL BOTTOM SECTION -->
        <div class="col-md-12">
            <div class="total-section">
                <h3>Grand Total: ₹<%= sum %></h3>
                <button class="checkout-btn"><a href="/checkout">Proceed to Checkout</a></button>
            </div>
        </div>

    </div>
</div>


<script>
    function increase(cart_id) {
        location.href = "/qtyincrease/" + cart_id;
    }
    function decrease(cart_id) {
        location.href = "/decrease/" + cart_id;
    }
</script>


<style>
    body {
        background:#f5f5f5;
        font-family: Arial, sans-serif;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        background: #fff;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    table th, table td {
        padding: 12px;
        text-align: center;
        border-bottom: 1px solid #ddd;
    }

    table th {
        background: #333;
        color: #fff;
    }

    .product-img {
        width: 80px;
        height: 80px;
        border-radius: 8px;
        object-fit: cover;
    }

    .qty-box {
        width: 80px;
        text-align: center;
        border: 1px solid #ccc;
        border-radius: 5px;
    }

    .qty-btn {
        padding: 4px 10px;
        background: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    .qty-btn:hover {
        background: #0056b3;
    }

    .remove-btn {
        color: red;
        text-decoration: none;
        font-weight: bold;
    }

    .remove-btn:hover {
        text-decoration: underline;
    }

    .total-section {
        margin-top: 20px;
        padding: 20px;
        text-align: right;
        background: #fff;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .checkout-btn {
        background: #28a745;
        color: #fff;
        padding: 12px 25px;
        border: none;
        font-size: 16px;
        border-radius: 5px;
        cursor: pointer;
    }

    .checkout-btn:hover {
        background: #218838;
    }
</style>

<%- include("footer") %>
